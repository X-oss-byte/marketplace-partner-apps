{
  "name": "@contentful/marketplace-partner-apps",
  "private": false,
  "engines": {
    "node": ">=16.0.0 < 18.0.0",
    "npm": ">= 8.0.0 < 9.0.0"
  },
  "packageManager": "npm@8.19.4",
  "workspaces": [
    "apps/*"
  ],
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^13.2.1",
    "prettier": "2.8.7",
    "turbo": "^1.8.8"
  },
  "scripts": {
    "build": "turbo run build --token=${TURBO_TOKEN}",
    "test": "turbo run test --token=${TURBO_TOKEN}",
    "deploy:staging": "turbo run deploy:staging --token=${TURBO_TOKEN}",
    "deploy": "turbo run deploy --token=${TURBO_TOKEN}",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{t,j}s?(x)": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
