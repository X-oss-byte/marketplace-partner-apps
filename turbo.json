{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "test": {
      "dependsOn": ["^test"],
      "inputs": ["src/**/*.spec.tsx", "src/**/*.spec.ts", "test/**/*.spec.ts", "test/**/*.spec.tsx"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "deploy:staging": {
      "dependsOn": ["build", "test"]
    },
    "deploy": {
      "dependsOn": ["build", "test"]
    }
  }
}
