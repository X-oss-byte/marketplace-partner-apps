{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "test": {
      "dependsOn": ["^test"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "deploy:staging": {
      "dependsOn": ["test", "build"]
    },
    "deploy": {
      "dependsOn": ["test", "build"]
    }
  }
}
